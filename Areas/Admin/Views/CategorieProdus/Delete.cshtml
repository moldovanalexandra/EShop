@model EShop.Models.CategorieProdus
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Sterge Categorie</h2>
<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="CategorieId">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DenumireCategorie"></label>
            </div>
            <div>
                <input asp-for="DenumireCategorie" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="DenumireCategorie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Sterge" />
            <a asp-action="Index" class="btn btn-success">Inapoi la lista</a>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



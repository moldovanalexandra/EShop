
@model EShop.Models.CategorieProdus
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Detalii categorie</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DenumireCategorie"></label>
            </div>
            <div>
                <input asp-for="DenumireCategorie" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="DenumireCategorie" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.CategorieId" class="btn btn-primary">Editeaza</a>
            <a asp-action="Index" class="btn btn-success">Inapoi</a>
            @*<input type="submit" class="btn btn-primary" value="Inapoi" />*@

        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

